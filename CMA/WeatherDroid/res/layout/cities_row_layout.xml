<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/weather_image_cities"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/weather_img_descrip"
        android:src="@drawable/nodata_icon" />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="viewStart">
        
        <TextView
            android:id="@+id/city_name_lbl" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/temperature_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="viewEnd">
        
        <TextView 
            android:id="@+id/humidity_lbl"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        
        <TextView 
            android:id="@+id/precipitation_lbl"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        
    </LinearLayout>

</LinearLayout>
